// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  email            String    @unique
  password         String
  name             String
  phone            String
  user_type        UserType
  created_at       DateTime  @default(now()) @db.Timestamptz
  update_at        DateTime  @updatedAt @db.Timestamptz
  Home             Home[]
  realtor_messages Message[] @relation("realtor_messages")
  buyer_messages   Message[] @relation("buyer_messages")
}

model Home {
  id                  Int          @id @default(autoincrement())
  address             String
  number_of_bedrooms  Int
  number_of_bathrooms Int
  city                String
  price               Float
  land_size           Float
  property_type       PropertyType
  created_at          DateTime     @default(now()) @db.Timestamptz
  update_at           DateTime     @updatedAt @db.Timestamptz

  realtor    User @relation(fields: [realtor_id], references: [id])
  realtor_id Int

  Image   Image[]
  Message Message[]
}

model Image {
  id         Int      @id @default(autoincrement())
  url        String
  created_at DateTime @default(now()) @db.Timestamptz
  update_at  DateTime @updatedAt @db.Timestamptz

  home    Home @relation(fields: [home_id], references: [id])
  home_id Int
}

model Message {
  id         Int      @id @default(autoincrement())
  message    String
  created_at DateTime @default(now()) @db.Timestamptz
  update_at  DateTime @updatedAt @db.Timestamptz

  home    Home @relation(fields: [home_id], references: [id])
  home_id Int

  realtor    User @relation("realtor_messages", fields: [realtor_id], references: [id])
  realtor_id Int

  buyer    User @relation("buyer_messages", fields: [buyer_id], references: [id])
  buyer_id Int
}

enum PropertyType {
  CONDO
  RESIDENTIAL
}

enum UserType {
  BUYER
  ADMIN
  REALTOR
}
